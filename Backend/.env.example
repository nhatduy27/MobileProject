# ============================================
# FIREBASE (Bắt buộc)
# ============================================
FIREBASE_PROJECT_ID=your-firebase-project-id
FIREBASE_REGION=asia-southeast1
FIREBASE_API_KEY=your-firebase-api-key

# Service Account (cho backend server-to-server)
# Tải từ Firebase Console > Project Settings > Service Accounts > Generate New Private Key
GOOGLE_APPLICATION_CREDENTIALS=./functions/service-account.json

# ============================================
# SEPAY (Optional - Thanh toán online)
# ============================================
SEPAY_API_URL=https://my.sepay.vn/userapi
SEPAY_SECRET_KEY=your-sepay-secret-key
SEPAY_ACCOUNT_NUMBER=your-bank-account-number
SEPAY_ACCOUNT_NAME=YOUR_ACCOUNT_NAME
SEPAY_BANK_CODE=MB
SEPAY_TEMPLATE_QR=https://qr.sepay.vn/img?acc={account}&bank={bank}&amount={amount}&des={content}&template=compact

# ============================================
# EMAIL SERVICE
# ============================================
# Chọn provider: 'brevo' (khuyến nghị) hoặc 'sendgrid'
EMAIL_PROVIDER=brevo

# BREVO (Khuyến nghị - Deliverability tốt hơn)
# Đăng ký tại: https://app.brevo.com
# Lấy API key: Settings > SMTP & API > API Keys
BREVO_API_KEY=your-brevo-api-key
BREVO_FROM_EMAIL=your-email@domain.com
BREVO_FROM_NAME=KTX Delivery

# SENDGRID (Fallback)
# Đăng ký tại: https://sendgrid.com/
SENDGRID_API_KEY=your-sendgrid-api-key
SENDGRID_FROM_EMAIL=your-email@domain.com
SENDGRID_FROM_NAME=KTX Delivery

# ============================================
# APP CONFIG
# ============================================
NODE_ENV=development
API_BASE_URL=http://127.0.0.1:5001/{project}/asia-southeast1/api

# ============================================
# GEMINI AI (Cho AI Chatbot)
# ============================================
# Lấy API Key tại: https://aistudio.google.com/app/apikey
# Xem hướng dẫn chi tiết trong docs/backend/NEW_MODULES_API_GUIDE.md
GEMINI_API_KEY=your-gemini-api-key
