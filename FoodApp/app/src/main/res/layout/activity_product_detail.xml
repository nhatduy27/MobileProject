<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Nút Back - Đã sửa -->
        <ImageButton
            android:id="@+id/ivBack"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/back"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:focusable="true"
            android:padding="12dp"
            android:contentDescription="Quay lại"
            android:layout_margin="8dp" />

        <!-- Ảnh sản phẩm lớn -->

        <!-- Thông tin sản phẩm -->
        <ImageView
            android:id="@+id/ivProductDetail"
            android:layout_width="match_parent"
            android:layout_height="380dp"
            android:background="#F5F5F5"
            android:scaleType="centerCrop" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="-24dp"
            android:orientation="vertical"
            android:padding="24dp"
            >

            <!-- Tên và giá -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvProductNameDetail"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Matcha Latte"
                    android:padding="10dp"
                    android:textColor="@color/black"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvProductPriceDetail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="20.000đ"
                    android:textColor="#FF9966"
                    android:textSize="20sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <!-- Đánh giá -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <RatingBar
                    android:id="@+id/ratingBar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:isIndicator="true"
                    android:numStars="5"
                    android:rating="4.5"
                    android:stepSize="0.5" />

                <TextView
                    android:id="@+id/tvRating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4.5 (128 đánh giá)"
                    android:textColor="#666666"
                    android:textSize="14sp" />

            </LinearLayout>

            <!-- Mô tả chi tiết -->
            <TextView
                android:id="@+id/tvProductDescriptionDetail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:lineSpacingExtra="6dp"
                android:text="Matcha Latte thơm ngon với lớp matcha nguyên chất, sữa tươi hảo hạng và đầy đủ topping. Thức uống hoàn hảo cho những buổi chiều thư giãn."
                android:textColor="#666666"
                android:textSize="16sp" />

            <!-- Thành phần -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="Thành phần"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvIngredients"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:lineSpacingExtra="4dp"
                android:text="• Bột matcha Nhật Bản\n• Sữa tươi không đường\n• Đá viên\n• Trân châu trắng\n• Thạch café\n• Siro vani"
                android:textColor="#666666"
                android:textSize="14sp" />

            <!-- Chọn số lượng -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="32dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Số lượng"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:padding="4dp">

                    <!-- Nút giảm -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnDecrease"
                        android:layout_width="60dp"
                        android:layout_height="48dp"
                        android:text="-"
                        android:textSize="20sp"
                        android:textColor="@color/white"
                        app:backgroundTint="@color/orange"
                        app:cornerRadius="24dp"
                        app:elevation="0dp" />

                    <!-- Số lượng -->
                    <TextView
                        android:id="@+id/tvQuantity"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:text="1"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:gravity="center" />

                    <!-- Nút tăng -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnIncrease"
                        android:layout_width="60dp"
                        android:layout_height="48dp"
                        android:text="+"
                        android:textSize="20sp"
                        android:textColor="@color/white"
                        app:backgroundTint="@color/orange"
                        app:cornerRadius="24dp"
                        app:elevation="0dp" />

                </LinearLayout>

            </LinearLayout>

            <!-- Tổng tiền -->
            <TextView
                android:id="@+id/tvTotalPrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="Tổng: 20.000đ"
                android:padding="10dp"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold" />

            <!-- Hai nút hành động -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginBottom="16dp">

                <!-- Nút Thêm vào giỏ hàng -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnAddToCartDetail"
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    style="@style/Widget.Material3.Button.OutlinedButton"
                    android:text="Thêm vào giỏ"
                    android:textColor="#FF9966"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:strokeColor="#FF9966"
                    app:strokeWidth="1dp"
                    app:cornerRadius="28dp" />

                <!-- Nút Mua ngay -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnBuyNow"
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    app:backgroundTint="#FF9966"
                    android:text="Mua ngay"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:cornerRadius="28dp"
                    app:elevation="4dp" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</ScrollView>